<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <!--需要的viewModel,通过mBinding.vm=mViewMode注入-->
        <variable
            name="model"
            type="com.joe.jetpackdemo.viewmodel.MeModel"
            />
        <variable
            name="activity"
            type="androidx.fragment.app.FragmentActivity"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFAFA">
        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginBottom="5sp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/h_back"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                tools:ignore="MissingConstraints" />
            <com.joe.jetpackdemo.utils.RoundImageView
                android:id="@+id/h_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                gs:type="circle"
                android:src="@drawable/head_image"
                android:layout_centerInParent="true"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/head_layout"
            android:layout_marginTop="10sp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                >
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/iphoneImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:id="@+id/iphoneTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iphoneImg"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="学    号:"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/iphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iphoneTitle"
                    android:background="@null"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@{model.user.account}"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/userBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"

                >
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/zhanghao"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:id="@+id/name"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/zhanghao"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="用户名:"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/name"
                    android:background="@null"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@{model.user.name}"
                    app:addTextChangedListener="@{model.nameWatcher}" />
                <TextView
                    android:id="@+id/updateName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:textSize="22sp"
                    android:text="修改" />
                <TextView
                    android:id="@+id/updateNameOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:textSize="22sp"
                    android:visibility="gone"
                    android:text="完成" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                >
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/iPhoneImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:id="@+id/iPhoneTitle"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iPhoneImg"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="手机号:"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/iPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iPhoneTitle"
                    android:background="@null"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="@{model.user.userPhone}"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                >
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/FacultyImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:id="@+id/FacultyTitle"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/FacultyImg"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="院系名:"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/Faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/FacultyTitle"
                    android:background="@null"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="电子与信息工程学院"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                >
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/specialtyImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:id="@+id/specialtyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/specialtyImg"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="专    业:"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/specialtyTitle"
                    android:background="@null"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="text"
                    android:text="计算机科学与技术"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                >
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/classImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:id="@+id/classTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/classImg"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="班    级:"
                    android:textColor="#000"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/className"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/classTitle"
                    android:background="@null"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:layout_gravity="center_vertical"
                    android:ems="10"
                    android:inputType="text"
                    android:enabled="false"
                    android:text="18计算机4"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="10dp"
                >
                <TextView
                    android:id="@+id/updatePassword"
                    android:gravity="center"
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:background="#03A9F4"
                    android:text="修改密码"
                    android:textColor="#fff"
                    />
                <TextView
                    android:id="@+id/brack"
                    android:gravity="center"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/updatePassword"
                    android:layout_marginLeft="50dp"
                    android:background="#B9F6CA"
                    android:textColor="#000"
                    android:text="返回上一页"
                    />
                <TextView
                    android:id="@+id/logout"
                    android:gravity="center"
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/brack"
                    android:layout_marginLeft="50dp"
                    android:background="#FF80AB"
                    android:textColor="#000"
                    android:text="退出登录"
                    />

            </RelativeLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>