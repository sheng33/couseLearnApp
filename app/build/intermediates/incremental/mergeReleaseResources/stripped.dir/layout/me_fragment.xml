    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFAFA" android:tag="layout/me_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:gs="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <RelativeLayout
            android:id="@+id/head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginBottom="5sp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/h_back"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                tools:ignore="MissingConstraints" />
            <com.joe.jetpackdemo.utils.RoundImageView
                android:id="@+id/h_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                gs:type="circle"
                android:src="@drawable/head_image"
                android:layout_centerInParent="true"
                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/h_back"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/user_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="182****5882"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/head_layout"
            android:layout_marginTop="10sp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/userBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:baselineAligned="false"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10sp">
                <com.joe.jetpackdemo.utils.RoundImageView
                    android:id="@+id/zhanghao"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/zhanghaoguanli"
                    gs:type="circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/zhanghao"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="2.5dp"
                    android:layout_marginLeft="5sp"
                    android:text="账号管理"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/me_right" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/courseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:baselineAligned="false"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp">
                    <com.joe.jetpackdemo.utils.RoundImageView
                        android:id="@+id/kecheng"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/kecheng"
                        gs:type="circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/kecheng"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="2.5dp"
                        android:layout_marginLeft="5sp"

                        android:text="课程管理"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/me_right" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/setBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:baselineAligned="false"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp">
                    <com.joe.jetpackdemo.utils.RoundImageView
                        android:id="@+id/shezhi"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/shezhi"
                        gs:type="circle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/shezhi"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="2.5dp"
                        android:layout_marginLeft="5sp"
                        android:text="设置"
                        android:textSize="16dp" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/me_right" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

         