	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.fragment.login.WelcomeFragment" android:tag="layout/register_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

		<TextView
			android:id="@+id/tv_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="20dp"
			android:layout_marginStart="20dp"
			android:textSize="14dp"
			android:drawableStart="@drawable/common_ic_back"
			android:paddingStart="10dp"
			android:paddingEnd="10dp"
			android:drawablePadding="10dp"
			android:text="Cancel"
			android:tag="binding_1"                          
			android:textColor="@color/colorPrimary"/>

		<TextView
			android:id="@+id/tv_title"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintHorizontal_bias="0.1"
			app:layout_constraintVertical_bias="0.1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="欢迎注册（￣︶￣）↗　"
			android:textColor="@color/textPrimary"
			android:padding="20dp"
			android:textSize="28sp"
			android:textStyle="bold"/>


		<EditText
			android:id="@+id/et_account"
			style="@style/CommonEditStyle"
			android:drawableStart="@drawable/common_ic_account"
			android:hint="手机号"
			android:tag="binding_2"                                                           
			                         
			app:layout_constraintBottom_toTopOf="@+id/et_pwd"
			app:layout_constraintTop_toBottomOf="@+id/tv_title"
			app:layout_constraintVertical_bias="0.17000002"
			tools:ignore="MissingConstraints"
			tools:layout_editor_absoluteX="41dp" />

		<EditText
			android:id="@+id/et_pwd"
			style="@style/CommonEditStyle"
			android:drawableStart="@drawable/common_ic_pwd"
			android:hint="密码"
			android:inputType="textPassword"
			android:tag="binding_3"                                                          
			                         
			app:layout_constraintBottom_toTopOf="@+id/code"
			app:layout_constraintTop_toBottomOf="@+id/et_account"
			tools:ignore="MissingConstraints"

			tools:layout_editor_absoluteX="41dp" />

		<EditText
			android:id="@+id/code"
			style="@style/CodeEditStyle"
			android:layout_alignParentTop="true"
			android:layout_marginStart="40dp"
			android:layout_marginBottom="20dp"
			android:drawableStart="@drawable/register_ic_email"
			android:hint="验证码"
			android:tag="binding_4"                                                            
			                            
			app:layout_constraintBottom_toTopOf="@+id/btn_register"
			app:layout_constraintStart_toStartOf="parent"

			app:layout_constraintTop_toBottomOf="@+id/et_pwd"
			app:layout_constraintVertical_chainStyle="packed"
			tools:ignore="MissingConstraints">
	</EditText>

		<Button
			android:id="@+id/getCode"
			style="@style/CodeButtonStyle"
			android:layout_alignParentTop="true"
			android:layout_marginEnd="32dp"
			android:text="获取"
			app:layout_constraintBottom_toTopOf="@+id/btn_register"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/et_pwd"
			app:layout_constraintVertical_bias="0.391"
			tools:ignore="MissingConstraints" />

		<Button
			android:id="@+id/btn_register"
			style="@style/CommonButtonStyle"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.8"
			android:tag="binding_5"          
			android:text="Sign UP"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:ignore="MissingConstraints"/>

	</androidx.constraintlayout.widget.ConstraintLayout>
         